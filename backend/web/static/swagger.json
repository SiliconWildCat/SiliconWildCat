        "license":{
            "name":"MIT",
            "url":"https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
      {
        "url": "/"
      }
    ],
    "paths": {
      "/TTS": {
        "post": {
          "tags": [
            {
              "name": "Text To Speech Request"
            }
          ],
          "summary": "Create a Speech from text",
          "requestBody": {
            "description": "Speech Request Post Object",
            "required": true,
            "content": {
              "application/x-www-form-urlencoded": {
                "schema": {
                  "$ref": "#/components/schemas/text"
                }
              }
            }
          },
          "produces": [
            "application/x-www-form-urlencoded"
          ],
          "responses": {
            "201": {
              "description": "OK",
              "schema": {
                "$ref": "#/components/schemas/text"
              }
            },
            "400": {
              "description": "Failed. Bad post data."
            }
          }
        }
      },

      "/SVS/": {
        "get": {
          "tags": [
            {
              "name": "Music URL request"
            }
          ],
          "parameters": [
            {
            "in" : "query",
            "name" : "title",
            "schema" : {
              "type" : "string"
            } 
              
            }
          ],
            "summary": "Returns Music URL",
            "responses": {
              "200": {
                "description": "OK",
                "schema": {
                  "$ref": "#/components/schemas/music"
                }
              }
            }
          
          
      }
    }
    },

    "components": {
      "schemas": {
        "text": {
          "type": "object",
          "properties": {
            "speech": {
              "type": "string"
            },
            "voices":{
              "type": "string"
            }
          }
        },
        "music": {
          "type": "object", 
          "properties": {
            "title": {
              "type":"string"
            }
          }
        }

      }
    }


  }
